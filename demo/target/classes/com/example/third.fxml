<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="282.0" prefWidth="400.0" style="-fx-background-color: #2d2d44;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ThirdController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefWidth="300" spacing="15">
            <!-- Заголовок -->
            <Label fx:id="display" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reset the password" textFill="WHITE" />
            
            <!-- Поля ввода -->
            <VBox spacing="10">
                <TextField fx:id="emailField" promptText="Enter email" style="-fx-font-size: 14px;" />
            </VBox>
         <Label fx:id="display1" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Enter email" textFill="WHITE" />
            
            <!-- Кнопки -->
            <HBox alignment="CENTER" spacing="15">
                <Button onAction="#confirm" style="-fx-background-color: #33e1ed; -fx-text-fill: white; -fx-font-size: 14px;" text="confirm" />
            </HBox>
         <HBox alignment="CENTER" spacing="15">
            <children>
               <Button onAction="#logIn" style="-fx-background-color: #33e1ed; -fx-text-fill: white; -fx-font-size: 14px;" text="Back to log in" />
            </children>
         </HBox>
        </VBox>
    </children>
</AnchorPane>
